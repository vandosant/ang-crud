<html>
<head>
  <script src="javascripts/angular.js"></script>
  <script src="javascripts/angular-ui-router.js"></script>
  <script src="javascripts/main.js"></script>
</head>
<body ng-app="angularCrud">
<h1 class="hello">hello</h1>
<ui-view></ui-view>

<script type="text/ng-template" id="/home.html">
  <div ng-controller="FormController">
    <form novalidate>
      Article: <input type="text" ng-model="article.url">
      <input type="submit" ng-click="update(article)">
    </form>
    <div ng-repeat="a in articles">
      <a href="#/articles/{{a._id}}">{{a.url}}</a>
    </div>
  </div>
</script>

<script type="text/ng-template" id="/articles.html">
  <div ng-controller="ArticleController">
    {{article.url}}
  </div>
</script>
</body>
</html>
